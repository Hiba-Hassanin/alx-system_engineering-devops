#!/usr/bin/env bash
# Define the path to the directory containing the manage_my_process script
MANAGE_SCRIPT_DIR="/path/to/directory/containing/manage_my_process"

# Check if the manage_my_process script exists
if [ ! -x "$MANAGE_SCRIPT_DIR/manage_my_process" ]; then
    echo "Error: manage_my_process script not found or not executable" >&2
    exit 1
fi

# Change directory to the script's directory
cd "$MANAGE_SCRIPT_DIR" || exit 1

# Function to start the manage_my_process script
start_process() {
    ./manage_my_process &
    PID=$!
    echo "$PID" | sudo tee /var/run/my_process.pid > /dev/null
    echo "manage_my_process started"
}

# Function to stop the manage_my_process script
stop_process() {
    sudo rm -f /var/run/my_process.pid
    pkill -f manage_my_process
    echo "manage_my_process stopped"
}

# Function to restart the manage_my_process script
restart_process() {
    stop_process
    start_process
}

# Check arguments
case "$1" in
    start)
        start_process
        ;;
    stop)
        stop_process
        ;;
    restart)
        restart_process
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac

exit 0
